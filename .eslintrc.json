{
    "root": true,

    "env": {
        "es2021": true,
        "node": true,
        "commonjs": true
    },

    "extends": ["prettier"],

    "plugins": ["prettier"],

    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        //"no-console": "error",
        "no-empty": 0,
        "no-irregular-whitespace": 1,

        "prettier/prettier": [
            "error",
            {
                "endOfLine": "auto"
            }
        ],
        "arrow-body-style": "off",
        "prefer-arrow-callback": "off"
    }
}
